---
import MainLayout from '../../layouts/MainLayout.astro';
import TraceWaterfall from '../../components/playground/TraceWaterfall';

const name = "Collapsible Trace Waterfall";
const date = "2025";

---

<MainLayout title={`${name} - Playground`} description={`${name} Prototype`} thumbnail="/images/og-img.jpg">
    <main class="playground-item-page">
        <!-- Name -->
        <h4>{name}</h4>
        
        <!-- Date -->
        <h5>{date}</h5>
        
        <!-- Interactive React Prototype -->
        <div class="playground-prototype">
            <TraceWaterfall client:load />
        </div>

        <!-- Optional: Write about how you built it (uses blog styling) -->
        <div class="playground-content">
            <!-- Uncomment and add your content below if you want to write about it -->
            <!--
            <h2>How I built it</h2>
            <p>Your content here...</p>
            -->
        </div>
    </main>
</MainLayout>

<style>
    .playground-item-page {
        max-width: 100ch;
        margin: 0 auto;
        padding-left: 6rem;
        padding-right: 6rem;
    }

    .playground-item-page h1 {
        margin-bottom: 0.5rem;
    }

    .playground-item-page h5 {
        margin-bottom: 2rem;
    }

    .playground-prototype {
        width: 100%;
        min-height: 600px;
        margin-bottom: 3rem;
        overflow: hidden;
        background-color: var(--color-background-primary);
    }

    .playground-content {
        /* Uses blog-post styling for markdown content */
    }

    .playground-content h2 {
        margin-top: 2.5rem;
    }

    .playground-content p {
        margin-top: 1rem;
        margin-bottom: 0;
        line-height: 185%;
    }

    @media screen and (max-width: 1200px) {
        .playground-item-page {
            padding-left: 1rem;
            padding-right: 1rem;
        }
    }
</style>

