---
import MainLayout from '../layouts/MainLayout.astro';

---

<MainLayout title="Playground" description='My Playground' thumbnail="/images/og-img.jpg">
    <main class="playground">
        <ul class="playground-grid">
            <!-- Example items - replace with your actual prototypes -->
            <!-- Use <video> for videos or <img> for images -->
            <li class="playground-item">
                <a href="/playground/portfolio">
                    <div class="playground-media">
                        <video class="playground-video" muted autoplay loop src="/video/inko-cat/inko-main-hero-30.mp4"></video>
                        <div class="playground-gradient"></div>
                        <div class="playground-info">
                            <span class="playground-name">Trace Waterfall</span>
                            <span class="playground-date">2024</span>
                        </div>
                    </div>
                </a>
            </li>
